<VBox fx:id="root" prefHeight="294.0" prefWidth="539.0" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="rs.emulate.editor.core.project.actions.OpenProjectDialog">
    <children>
          <ScrollPane fx:id="formPane" fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
         <content>
            <GridPane prefHeight="226.0" prefWidth="537.0" vgap="20.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="86.0" minHeight="10.0" prefHeight="63.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="120.0" minHeight="10.0" prefHeight="120.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <VBox prefHeight="57.0" prefWidth="497.0">
                     <children>
                        <Label text="Project name" />
                        <TextField fx:id="projectNameInput" maxWidth="200.0" prefWidth="318.0">
                           <VBox.margin>
                              <Insets bottom="10.0" top="10.0" />
                           </VBox.margin></TextField>
                        <Separator prefWidth="200.0" />
                     </children></VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="1">
                     <children>
                        <Label text="Cache path" />
                        <GridPane hgap="20.0">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="421.0" minWidth="10.0" prefWidth="37.0" />
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="460.0" minWidth="10.0" prefWidth="460.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <VBox.margin>
                              <Insets bottom="10.0" top="10.0" />
                           </VBox.margin>
                           <children>
                              <Button fx:id="vfsRootSelectorButton" mnemonicParsing="false" prefWidth="51.0">
                                 <graphic>
                                    <FontIcon iconLiteral="fi-folder" />
                                 </graphic></Button>
                              <TextField fx:id="vfsRootInput" GridPane.columnIndex="1" />
                           </children>
                        </GridPane>
                     </children>
                  </VBox>
               </children>
            </GridPane>
         </content></ScrollPane>
          <HBox alignment="CENTER_RIGHT" prefHeight="49.0" prefWidth="539.0">
              <children>
                  <Button fx:id="openButton" mnemonicParsing="false" text="Open">
                      <HBox.margin>
                          <Insets left="10.0" right="5.0" />
                      </HBox.margin>
                  </Button>
                  <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel">
                      <HBox.margin>
                          <Insets left="5.0" right="10.0" />
                      </HBox.margin>
                  </Button>
              </children>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
          </HBox>
    </children>
</VBox>
